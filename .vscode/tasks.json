{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch blazor",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "-lp='https'",
                "--project",
                "${workspaceFolder}/Server/MyBlazorCourse.Server.csproj"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch rest api",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "-lp='https'",
                "--project",
                "${workspaceFolder}/RestApi/RestApi.csproj"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch gRpc api",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "-lp='http'",
                "--project",
                "${workspaceFolder}/GrpcService/GrpcService.csproj"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}