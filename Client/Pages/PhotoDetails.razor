@page "/photo-details/{id:int}"
@using MyBlazorCourse.Shared.Model;
@using MyBlazorCourse.Shared.Interface;
@inject IPhotoService _photoService;

<MudText Typo="Typo.h4">Photo Details</MudText>

@if (Model is not null)
{
    <MudCard>
        <MudCardContent>
            <MudTextField Label="Id" @bind-Value="Model.Id" For="@(() => Model.Id)" />
            <MudTextField Label="Title" @bind-Value="Model.Title" For="@(() => Model.Title)" />
            <MudTextField Label="Description" @bind-Value="Model.Description" For="@(() => Model.Description)" />
            <MudCardMedia Image="@(Model.Data.Length == 0 ? string.Empty : $"data:{Model.ImageMimetype};base64,{Convert.ToBase64String(Model.Data)}")"
                          Height="200"
                          Class="rounded-lg" />
        </MudCardContent>
    </MudCard>
}