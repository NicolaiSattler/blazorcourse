@page "/all-photos"

<MudText Typo="Typo.h4">Photo Album</MudText>

<MudButton Class="mb-4 justify-end"  Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Href="/add-photo">New</MudButton>

@foreach (var item in PhotoCollection)
{
    <MudCard Class="mb-4">
        <MudCardMedia Image="@(item is null ? string.Empty : $"data:{item.ImageMimetype};base64,{Convert.ToBase64String(item.Data)}")" Height="200" />
        <MudCardContent>
            <MudText Typo="Typo.h5">@item.Title</MudText>
            <MudText Typo="Typo.body2">@item.Description</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" Href="@($"/photo-details/{item.Id}")">View</MudButton>
        </MudCardActions>
    </MudCard>
}
